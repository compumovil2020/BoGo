<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layReciever"
        android:minWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_send"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtRecieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRecievedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="6dp"
            android:textColor="@color/colorBlack"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySent"
        android:minWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_recieve"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtSent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="6dp"
            android:textColor="@color/colorBlack"
            android:textSize="8sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>